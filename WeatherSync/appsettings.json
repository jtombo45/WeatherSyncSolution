{
  "WeatherApiKey": "YOUR_API_KEY_HERE",
  "WeatherApiBaseUrl": "https://api.openweathermap.org/data/2.5/weather",
  "WeatherApiUnits": "imperial",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost; Database=WeatherDB; User Id=YOUR_USER; Password=YOUR_PASSWORD;"
  },
  "Cities": [
    { "Name": "Phoenix", "Lat": 33.4484, "Lon": -112.0741 },
    { "Name": "New York", "Lat": 40.7128, "Lon": -74.0060 },
    { "Name": "London", "Lat": 51.5074, "Lon": -0.1278 }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Keys": {
      "WeatherApi": "weatherapi:request_count"
    }
  },
  "RateLimit": {
    "MaxRequestsPerDay": 1000
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/weatherapp.log", "rollingInterval": "Day" } }
    ]
  }
}
